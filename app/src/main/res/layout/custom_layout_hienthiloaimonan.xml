<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size10dp">
    <ImageView
        android:id="@+id/imHienThiMonAn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size190dp"
        android:src="@drawable/backgroundheader"
        android:scaleType="centerCrop">

    </ImageView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size70dp"
        android:layout_gravity="bottom"
        android:background="@color/colorHide">
        <TextView
            android:id="@+id/txtTenLoaiThucDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size18sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </FrameLayout>

</FrameLayout>